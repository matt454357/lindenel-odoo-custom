<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_box_label_page">
        <t t-set="info_url" t-value="o.product_tmpl_id.info_url or o.env['ir.config_parameter'].sudo().get_param('default_info_url')"/>

        <!-- to see the middle line of the page, add this to the page dive style: "border-bottom: 1px dashed #ccc;" -->
        <div class="page" style="height: 5.5in; width: 100%; position: relative; overflow: hidden; padding: 0.25in; box-sizing: border-box;">

            <div class="row no-gutters" style="display:table; width:100%; text-align:center; margin:0px; height:180px;">
                <div class="col-6" style="display:table-cell; float:none; text-align:left; vertical-align:top;">
                    <span style="font-size:45px; font-weight:bold; line-height: 1;">
                        Linden Elevator<br/>
                    </span>
                    <span style="font-size: 22px">
                        3471 East 450 North<br/>
                        Lewisville, ID 83431<br/>
                        208-754-4884
                    </span>
                </div>
                <div class="col-6" style="display:table-cell; float:none; vertical-align:top; text-align:right;">
                    <div style="font-size:70px; font-weight:bold; line-height: 1.1;" t-field="o.valve_serial_id"/>
                    <!--<div style="font-family:'Code 128'; font-size:72px; margin:-18px -18px -28px -18px" t-field="o.track_code128"/>-->
                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('Code128', o.valve_serial_id.name, 500, 80)" style="width:250px; height:40px;"/>
                </div>
            </div>

            <div class="row no-gutters" style="text-align:center; margin:0px; height:220px; max-height:220px; overflow:hidden; display:table; width:100%;">
                <div class="col-12" style="display:table-cell; vertical-align:middle; float:none;">
                    <span style="font-size:65px; font-weight:bold; display:block; max-height:200px; overflow:hidden;" t-field="o.product_tmpl_id"/>
                </div>
            </div>

            <div class="row no-gutters" style="display:table; position: absolute; bottom: 0.25in; left: 0.25in; right: 0.25in; font-size:16px;">
                <div class="col-6" style="display:table-cell; text-align:left; vertical-align:bottom;">
                    <strong>Weight:</strong>
                    <span t-field="o.pack_weight"/> lbs
                    <t t-if="o.pack_emp_id">
                        (<span t-field="o.pack_emp_id.name"/>)
                    </t>
                </div>
                <div class="col-6" style="display:table-cell; text-align:right; vertical-align:bottom;">
                    <t t-if="info_url">
                        <img
                            style="display:inline-block; width: 120px; height: 120px; image-rendering: -webkit-optimize-contrast;"
                            t-att-src="'/report/barcode/?type=QR&amp;value=%s&amp;width=%s&amp;height=%s' % (info_url, 300, 300)"
                            alt="QR Code"/>
                    </t>
                    <!--<span t-field="o.partner_id.name"/>-->
                </div>
            </div>

        </div>
    </template>

    <template id="report_box_label">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="position: relative;">
                    <t t-call="valve_tracking.report_box_label_page">
                        <t t-set="o" t-value="o"/>
                    </t>
                    <p style="page-break-before: always"> </p>
                </div>
            </t>
        </t>
    </template>

</odoo>
