<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="core_exchange_tree_view" model="ir.ui.view">
        <field name="name">core.exchange.tree</field>
        <field name="model">core.exchange</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree string="Core Exchange">
                <field name="partner_id"/>
                <field name="product_tmpl_id"/>
                <field name="invoice_date"/>
                <field name="is_paid"/>
                <field name="qb_invoice"/>
                <field name="is_returned"/>
                <field name="return_date"/>
                <field name="return_serial"/>
            </tree>
        </field>
    </record>

    <record id="core_exchange_form_view" model="ir.ui.view">
        <field name="name">core.exchange.form</field>
        <field name="model">core.exchange</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Core Exchange">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_return" type="object" class="oe_stat_button"/>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="product_tmpl_id"/>
                            <field name="description"/>
                            <field name="quantity"/>
                            <field name="invoice_date"/>
                            <field name="is_paid"/>
                        </group>
                        <group>
                            <field name="ext_ref"/>
                            <field name="qb_invoice"/>
                            <field name="is_returned"/>
                            <field name="return_date"/>
                            <field name="return_serial"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_core_exchange" model="ir.actions.act_window">
        <field name="name">Core Exchanges</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">core.exchange</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new core exchange
            </p><p>
                Once the is created, it can be returned
            </p>
        </field>
    </record>

    <record id="core_exchange_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="core_tracking.core_exchange_tree_view"/>
        <field name="act_window_id" ref="core_tracking.action_core_exchange"/>
    </record>

    <record id="core_exchange_action_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="core_tracking.core_exchange_form_view"/>
        <field name="act_window_id" ref="core_tracking.action_core_exchange"/>
    </record>

    <menuitem id="core_tracking_menu" name="Core Tracking" groups="" sequence="45" web_icon="core_tracking,static/description/icon.png">
        <menuitem id="core_tracking_operations_menu" name="Operations" sequence="10">
            <menuitem id="core_exchange_menu" name="Core Exchanges" action="core_tracking.action_core_exchange" sequence="100"/>
        </menuitem>
        <menuitem id="core_tracking_master_data_menu" name="Master Data" sequence="20">
            <menuitem id="product_menu" name="Products" action="product.product_template_action" sequence="100"/>
            <menuitem id="product_category_menu" name="Product Categories" action="product.product_category_action_form" sequence="110"/>
            <menuitem id="customer_menu" name="Customers" action="base.action_partner_form" sequence="120"/>
        </menuitem>
    </menuitem>

</odoo>
